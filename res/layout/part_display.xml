                android:id="@+id/text_dpi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/unknown"
                style="@style/Widget.Value"
                />
    </TableRow>

    <TableRow android:layout_width="match_parent"
              android:layout_height="wrap_content">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
