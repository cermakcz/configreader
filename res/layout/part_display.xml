    </TableRow>

    <TableRow android:layout_width="match_parent"
              android:layout_height="wrap_content">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/orientation"
                style="@style/Widget.Label"
                />
